{
  "compilerOptions": {
    "outDir": "lib",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2020",
    "lib": [
      "es2020",
      "dom"
    ],
    "sourceMap": true,
    "types": [
      "node",
      "reflect-metadata"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules"
  ]
}
